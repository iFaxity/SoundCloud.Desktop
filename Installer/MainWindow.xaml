            <TextBlock HorizontalAlignment="Left" Margin="10,20.418,0,0" TextWrapping="Wrap" Text="Progress" VerticalAlignment="Top"/>
            <CheckBox x:Name="cbxDeskIco" IsChecked="True" Content="Create Desktop Icon" HorizontalAlignment="Left" Margin="10,76.513,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
