<Page x:Class="SoundStreamer.StreamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="788"
	Title="Stream">

    <Grid x:Name="grid" Background="White">
        <ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="panel" Margin="0,10" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</Page>
